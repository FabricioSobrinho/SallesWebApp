@model IEnumerable<SallesWebApp.Models.SallesRecord>

@{
	ViewData["Title"] = "Simple Search";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
	<div class="container-fluid d-flex">
		<form class="navbar-form d-flex flex-column align-items-center w-100" role="search">
			<div class="form-group d-flex justify-content-around col-12 bg-secondary">
				<div class="form-group">
					<label for="minDate">Min Date</label>
					<input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
				</div>
				<div class="form-group">
					<label for="maxDate">Max Date</label>
					<input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
				</div>
			</div>
			<button type="submit" class="btn btn-primary col-2">Filter</button>
		</form>
	</div>
</nav>
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title" style="color: #F0F8FF;">Total sales = @Model.Sum(obj => obj.Amount).ToString("C2")</h3>
	</div>
	<div class="panel-body">
		<table class="table table-striped table-hover">
			<thead>
				<tr class="success">
					<th style="color: #F0F8FF;">
						@Html.DisplayNameFor(model => model.Id)
					</th>
					<th style="color: #F0F8FF;">
						@Html.DisplayNameFor(model => model.Date)
					</th>
					<th style="color: #F0F8FF;">
						@Html.DisplayNameFor(model => model.Seller)
					</th>
					<th style="color: #F0F8FF;">
						@Html.DisplayNameFor(model => model.Seller.Department)
					</th>
					<th style="color: #F0F8FF;">
						@Html.DisplayNameFor(model => model.Amount)
					</th style="color: #F0F8FF;">
					<th style="color: #F0F8FF;">
						@Html.DisplayNameFor(model => model.Status)
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td style="color: #F0F8FF;">
							@Html.DisplayFor(modelItem => item.Id)
						</td>
						<td style="color: #F0F8FF;">
							@Html.DisplayFor(modelItem => item.Date)
						</td>
						<td style="color: #F0F8FF;">
							@Html.DisplayFor(modelItem => item.Seller.Name)
						</td>
						<td style="color: #F0F8FF;">
							@Html.DisplayFor(modelItem => item.Seller.Department.Name)
						</td>
						<td style="color: #F0F8FF;">
							@Html.DisplayFor(modelItem => item.Amount)
						</td>
						<td style="color: #F0F8FF;">
							@Html.DisplayFor(modelItem => item.Status)
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>